{% extends 'base.html.twig' %}

{% block title %}RappNet{% endblock %}

{% block body %}

    {{ encore_entry_link_tags('home') }}

    <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <article style="padding:50px 20px">

        <div id="slider"></div>
        {{ form(searchForm, {
            attr: {id: 'searchForm'}
        }) }}

        <span id="header">
            Header goes here.
        </span>

        The top <span id="top_posters">top_posters</span> posters accounted for <span id="top_posters_message_count"></span> of <span id="total_message_count"></span> messages.

    </article>

    <div class="row">
        <div class="col-md-6">
            <div id="div_chartxx" ></div>
            {% set url = path('message_count_data')  %}
            <a id="url_link" target="_blank" href="{{ url }}">{{ url }}</a><br />

            <div id="myPieChart" height="600" data-url="{{ url }}"></div>
        </div>
        <div class="col-md-6">
            <div id="column_chartxx"></div>
        </div>
    </div>

    <div class="example-wrapper">
</div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('home') }}

    <textarea>
        Pie Chart
