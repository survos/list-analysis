{% extends 'base.html.twig' %}

{% block content %}
    <h1>Reset Password</h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.password.plain) }}
        {{ form_row(form.password.confirmation) }}

        <div>
            <input type="submit" value="Reset your password" />
        </div>
    {{ form_end(form) }}
{% endblock %}
