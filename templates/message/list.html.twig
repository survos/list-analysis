{% extends "base.html.twig" %}

{% block body %}

    <h1>
        {{ messages|length }} Messages matching {{ searchString }}
    </h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Body</th>
        </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.senderName}}</td>
                <td>{{ message.subject}}</td>
                <td>{{ message.body}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
